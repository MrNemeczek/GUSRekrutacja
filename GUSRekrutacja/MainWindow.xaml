<Window x:Class="GUSRekrutacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUSRekrutacja"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView 
            x:Name="DataList"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Standard"
            ScrollViewer.CanContentScroll="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding NameLevel}" Value="Temat">
                            <Setter Property="Background" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NameLevel}" Value="Dziedzina">
                            <Setter Property="Background" Value="Yellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NameLevel}" Value="Zakres informacyjny">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView x:Name="MainGridView">
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="ID nadrzędnego elementu" DisplayMemberBinding="{Binding IDSuperiorElement}"/>
                    <GridViewColumn Header="ID poziomu" DisplayMemberBinding="{Binding IDLevel}"/>
                    <GridViewColumn Header="Nazwa poziomu" DisplayMemberBinding="{Binding NameLevel}"/>
                    <GridViewColumn Header="Czy zmienne" DisplayMemberBinding="{Binding Variables}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Window>
